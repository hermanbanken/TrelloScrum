{
	"name": "Tags for Trello",
	"version": "1.0",
	"description": "Adds Tags to your Trello",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["jquery-1.7.1.min.js","trellotags.js"],
			"css": ["trellotags.css"]
		}
	],
	"manifest_version" : 2,
    "icons": { "128": "trello-tags-icon.png" },
    "web_accessible_resources": [
	    "images/storypoints-icon.png",
	    "images/points-done.png"
    ]
}
